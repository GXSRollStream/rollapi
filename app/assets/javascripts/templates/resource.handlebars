<section id="forms">
  <div class="row">
    <div class="span7 offset1">
      <fieldset>
        <legend>API Request Tester</legend>
        <form>

        <div class="control-group">
          <div class="controls">
            <label>URL</label>
            {{view Ember.TextField valueBinding="url"}}
          </div>
        </div>
        <div class="control-group">
          <label>Username</label>
          <div class="controls">
            {{view Ember.TextField valueBinding="user"}}
          </div>
        </div>

        <div class="control-group">
          <label>Password</label>
          <div class="controls">
            {{view Ember.TextField valueBinding="password"}}
          </div>
        </div>

          <div class="control-group">
            <label>Resource</label>
            <div class="controls">
              {{view Ember.Select  contentBinding="targetTypes" optionLabelPath="content.label" optionValuePath="content.value" valueBinding="targetKind"}}
            </div>
          </div>

          <div class="control-group">
            <label>RequestType</label>
            <div class="controls">
              {{view Ember.Select  contentBinding="targetKinds" optionLabelPath="content.label" optionValuePath="content.value" valueBinding="targetType"}}
            </div>
          </div>

          <div class="control-group">
            <label>Target</label>
            <div class="controls">
              {{view Ember.TextField valueBinding="targetId" }}
            </div>
          </div>

          <div class="control-group">
            <label>body</label>
            <div class="controls">
              {{view Ember.TextArea valueBinding="body" }}
            </div>
          </div>

          <div class="form-actions">
            <button class="btn btn-primary" type="submit"{{action submitSearch}}>
              Submit
            </button>
            <button class="btn" type="reset">Cancel</button>
          </div>
        </fieldset>
      </form>
    </div>
</section>
