<section id="forms">
  <div class="page-header">
    <h1>Forms</h1>
  </div>

  <div class="row">
    <div class="span7 offset1">
      <%= form_for @resource, class: "form-horizontal well"  do | f | %>
        <fieldset>
          <legend>Controls Bootstrap supports</legend>

          <div class="control-group">
            <%= f.label :url %>
            <div class="controls">
              <%= f.text_field :url, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :apiKey %>
            <div class="controls">
              <%= f.text_field :apiKey, class: "input-small" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :username %>
            <div class="controls">
              <%= f.text_field :username, class: "input-small" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password %>
            <div class="controls">
              <%= f.text_field :password, class: "input-small" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :resource %>
            <div class="controls">
              <%= f.select :resource, %w(contact company).map { |r| [r.titleize, r] } %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :request_type %>
            <div class="controls">
              <%= f.select :request_type, %w(get post delete search).map { |r| [r.titleize, r] } %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :target, 'Resource ID' %>
            <div class="controls">
              <%= f.text_field :target, class: "input-small" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :body %>
            <div class="controls">
              <%= f.text_area :body, class: "input-xlarge" %>
            </div>
          </div>

          <div class="form-actions">
            <button class="btn btn-primary" type="submit">
              Submit
            </button>
            <button class="btn" type="reset">Cancel</button>
          </div>

      <% end %>
    </div>
  </div>
  <%= @resource.response.try(:body) %>
  <%= @resource.response.try(:headers) %>

</section>
